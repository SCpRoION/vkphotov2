<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ru.profi.vkphotov2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".AuthorizationActivity"
            android:label="@string/auth_activity_title"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".profilephotos.ProfilePhotosActivity"
            android:label="@string/photos_grid_activity_title" />
        <activity android:name=".fullscreenphoto.FullscreenPhotoActivity"
            android:label="@string/fullscreen_photo_activity_title" />
    </application>

</manifest>